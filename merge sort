#include<stdio.h>
int merge(int a[20],int lb,int mid,int ub);
int mergesort(int a[20],int lb,int ub){
    int mid;
    if(lb<ub){
        mid=(lb+ub)/2;
        mergesort(a,lb,mid);
        mergesort(a,mid+1,ub);
        merge(a,lb,mid,ub);
    }
}
int merge(int a[20],int lb,int mid,int ub){
    int i=lb;
    int j=mid+1;
    int k=lb,b[20];
    while(i<=mid&&j<=ub){
        if(a[i]<=a[j]){
            b[k]=a[i];
            i++;
            k++;
        }
        else{
            b[k]=a[j];
            j++;
            k++;
        }
    }
    if(i>mid){
        while(j<=ub){
            b[k]=a[j];
            j++;
            k++;
        }
    }
    else if(j>ub){
        while(i<=mid){
            b[k]=a[i];
            i++;
            k++;
        }
    }
    for(k=0;k<=ub;k++){
      printf("%d",b[k]);
   }
}
int main()
{
    int a[20],n,i;
    printf("enter the size of the array");
    scanf("%d",&n);
    for(i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
    mergesort(a,0,n-1);
    //for(i=0;i<n;i++){
        //printf("%d hey",a[i]);
    //}
    return 0;
}
